<svg width="128" height="128" viewBox="0 0 128 128" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <!-- 桃子主体渐变 -->
    <radialGradient id="peachGradient" cx="0.35" cy="0.3" r="0.8">
      <stop offset="0%" stop-color="#FFD4B3"/>
      <stop offset="30%" stop-color="#FFA07A"/>
      <stop offset="70%" stop-color="#FF7F50"/>
      <stop offset="100%" stop-color="#E55B3C"/>
    </radialGradient>
    
    <!-- 桃子红晕渐变 -->
    <radialGradient id="peachBlush" cx="0.6" cy="0.4" r="0.5">
      <stop offset="0%" stop-color="#FF6B6B" stop-opacity="0.6"/>
      <stop offset="60%" stop-color="#FF4757" stop-opacity="0.3"/>
      <stop offset="100%" stop-color="#FF4757" stop-opacity="0"/>
    </radialGradient>
    
    <!-- 高光渐变 -->
    <radialGradient id="peachHighlight" cx="0.25" cy="0.25" r="0.4">
      <stop offset="0%" stop-color="#FFFFFF" stop-opacity="0.9"/>
      <stop offset="50%" stop-color="#FFFFFF" stop-opacity="0.4"/>
      <stop offset="100%" stop-color="#FFFFFF" stop-opacity="0"/>
    </radialGradient>
    
    <!-- 阴影渐变 -->
    <radialGradient id="peachShadow" cx="0.5" cy="0.85" r="0.4">
      <stop offset="0%" stop-color="#8B4513" stop-opacity="0.3"/>
      <stop offset="100%" stop-color="#8B4513" stop-opacity="0"/>
    </radialGradient>
  </defs>
  
  <!-- 阴影 -->
  <ellipse cx="64" cy="115" rx="20" ry="6" fill="url(#peachShadow)"/>
  
  <!-- 桃子主体（心形） -->
  <path d="M64 25 C50 10, 25 15, 25 40 C25 65, 64 100, 64 100 C64 100, 103 65, 103 40 C103 15, 78 10, 64 25 Z" 
        fill="url(#peachGradient)"/>
  
  <!-- 桃子中间凹槽 -->
  <path d="M64 25 C64 30, 64 45, 64 60" stroke="#E55B3C" stroke-width="2" opacity="0.6"/>
  
  <!-- 桃子红晕 -->
  <ellipse cx="75" cy="50" rx="15" ry="20" fill="url(#peachBlush)"/>
  
  <!-- 桃子绒毛纹理 -->
  <g opacity="0.2">
    <path d="M35 35 Q40 40, 45 35" stroke="#FFB347" stroke-width="0.5"/>
    <path d="M40 50 Q45 55, 50 50" stroke="#FFB347" stroke-width="0.5"/>
    <path d="M55 45 Q60 50, 65 45" stroke="#FFB347" stroke-width="0.5"/>
    <path d="M70 55 Q75 60, 80 55" stroke="#FFB347" stroke-width="0.5"/>
    <path d="M50 65 Q55 70, 60 65" stroke="#FFB347" stroke-width="0.5"/>
    <path d="M75 70 Q80 75, 85 70" stroke="#FFB347" stroke-width="0.5"/>
  </g>
  
  <!-- 桃子叶子 -->
  <g transform="translate(64, 20)">
    <path d="M-5 -8 Q-8 -15, -3 -18 Q2 -15, 0 -8 Q-2 -10, -5 -8" fill="#4A7C59"/>
    <path d="M5 -8 Q8 -15, 3 -18 Q-2 -15, 0 -8 Q2 -10, 5 -8" fill="#4A7C59"/>
    <path d="M-3 -12 L3 -12" stroke="#68D391" stroke-width="0.5"/>
  </g>
  
  <!-- 主高光 -->
  <ellipse cx="50" cy="40" rx="12" ry="18" fill="url(#peachHighlight)"/>
  
  <!-- 小高光点 -->
  <circle cx="48" cy="35" r="3" fill="#FFFFFF" opacity="0.7"/>
  <circle cx="55" cy="45" r="1.5" fill="#FFFFFF" opacity="0.5"/>
</svg>